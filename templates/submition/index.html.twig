{% extends 'base.html.twig' %}

{% block title %}Hello SubmitionController!{% endblock %}

{% block body %}
<table class="table table-borderless datatable datatable-table">
    <thead>
        <!-- Table header columns -->
    </thead>
    <tbody>
        {% for submission in studentSubmissions %}
        <tr>
            <td>{{ submission.id }}</td>
            <td>{{ submission.program.title }}</td>
            <!-- Other columns as needed -->
            <td>
                {% if submission.status == 'pending' %}
                    <form action="{{ path('approve_student_submission', {'id': submission.id}) }}" method="post">
                        <button type="submit" class="btn btn-primary">Approve</button>
                    </form>
                {% else %}
                    <span class="badge bg-success">{{ submission.status }}</span>
                {% endif %}
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}
